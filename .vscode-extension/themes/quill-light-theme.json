{
  "name": "Quill Light",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#1f2937",
    "editorLineNumber.foreground": "#9ca3af",
    "editorLineNumber.activeForeground": "#7c3aed",
    "editor.selectionBackground": "#ddd6fe",
    "editor.lineHighlightBackground": "#f9fafb",
    "editorCursor.foreground": "#db2777",
    "editorWhitespace.foreground": "#d1d5db"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": "comment",
      "settings": {
        "foreground": "#9ca3af",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Control Keywords (if, then, else, end, while, for)",
      "scope": "keyword.control.quill",
      "settings": {
        "foreground": "#7c3aed",
        "fontStyle": "bold"
      }
    },
    {
      "name": "quill Commands (say, ask, choice, set)",
      "scope": "keyword.other.quill.command",
      "settings": {
        "foreground": "#db2777",
        "fontStyle": "bold"
      }
    },
    {
      "name": "quill Other Keywords (function, import)",
      "scope": "keyword.other.quill",
      "settings": {
        "foreground": "#7c3aed",
        "fontStyle": ""
      }
    },
    {
      "name": "Logical Operators (and, or, not, is)",
      "scope": "keyword.operator.logical.quill",
      "settings": {
        "foreground": "#d97706",
        "fontStyle": ""
      }
    },
    {
      "name": "Strings",
      "scope": "string.quoted",
      "settings": {
        "foreground": "#059669"
      }
    },
    {
      "name": "Numbers",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#2563eb"
      }
    },
    {
      "name": "Functions",
      "scope": "entity.name.function",
      "settings": {
        "foreground": "#0891b2",
        "fontStyle": ""
      }
    },
    {
      "name": "Operators (+, -, *, /, ==, !=)",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#d97706"
      }
    },
    {
      "name": "Variables",
      "scope": "variable.other.quill",
      "settings": {
        "foreground": "#ea580c",
        "fontStyle": ""
      }
    },
    {
      "name": "Constants (true, false, null)",
      "scope": "constant.language",
      "settings": {
        "foreground": "#7c3aed",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Built-in Functions",
      "scope": "entity.name.function.builtin",
      "settings": {
        "foreground": "#9333ea",
        "fontStyle": ""
      }
    }
  ]
}
