{
  "name": "quill Neon",
  "type": "dark",
  "colors": {
    "editor.background": "#0a0e27",
    "editor.foreground": "#e0e0e0",
    "editorLineNumber.foreground": "#1e3a5f",
    "editorLineNumber.activeForeground": "#00ffff",
    "editor.selectionBackground": "#00ffff30",
    "editor.lineHighlightBackground": "#1a1a3e40",
    "editorCursor.foreground": "#ff00ff",
    "editorWhitespace.foreground": "#1e3a5f40",
    "editorIndentGuide.background": "#1e3a5f",
    "editorIndentGuide.activeBackground": "#00ffff"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": "comment",
      "settings": {
        "foreground": "#4a5568",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Control Keywords (if, then, else, end, while, for)",
      "scope": "keyword.control.quill",
      "settings": {
        "foreground": "#00ffff",
        "fontStyle": "bold"
      }
    },
    {
      "name": "quill Commands (say, ask, choice, set)",
      "scope": "keyword.other.quill.command",
      "settings": {
        "foreground": "#ff00ff",
        "fontStyle": "bold"
      }
    },
    {
      "name": "quill Other Keywords (function, import)",
      "scope": "keyword.other.quill",
      "settings": {
        "foreground": "#7c3aed",
        "fontStyle": ""
      }
    },
    {
      "name": "Logical Operators (and, or, not, is)",
      "scope": "keyword.operator.logical.quill",
      "settings": {
        "foreground": "#ffff00",
        "fontStyle": ""
      }
    },
    {
      "name": "Strings",
      "scope": "string.quoted",
      "settings": {
        "foreground": "#00ff88"
      }
    },
    {
      "name": "Numbers",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#00bfff"
      }
    },
    {
      "name": "Functions",
      "scope": "entity.name.function",
      "settings": {
        "foreground": "#ff69b4",
        "fontStyle": ""
      }
    },
    {
      "name": "Operators (+, -, *, /, ==, !=)",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#ffff00"
      }
    },
    {
      "name": "Variables",
      "scope": "variable.other.quill",
      "settings": {
        "foreground": "#ffd700",
        "fontStyle": ""
      }
    },
    {
      "name": "Constants (true, false, null)",
      "scope": "constant.language",
      "settings": {
        "foreground": "#ff1493",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Built-in Functions",
      "scope": "entity.name.function.builtin",
      "settings": {
        "foreground": "#da70d6",
        "fontStyle": ""
      }
    }
  ]
}
